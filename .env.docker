# Docker Compose Environment Variables
# Copy this file to .env and fill in your actual values

# === Database Configuration ===
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=musicmood
POSTGRES_USER=musicmood_user
POSTGRES_PASSWORD=musicmood_pass
DATABASE_URL=postgresql://musicmood_user:musicmood_pass@postgres:5432/musicmood

# === Redis Configuration ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# === Spotify API (Required) ===
# Get credentials from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8001/callback

# === Ollama Configuration ===
# For Docker: use host.docker.internal to access host machine
# For local dev: use http://localhost:11434
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.2:3b

# === API Configuration ===
API_HOST=0.0.0.0
API_PORT=8001

# === Frontend Configuration ===
API_BASE_URL=http://localhost:8001
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
