# Docker Compose Environment Variables
# Copy this file to .env and fill in your actual values

# === Database Configuration ===
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=musicmood
POSTGRES_USER=musicmood_user
POSTGRES_PASSWORD=musicmood_pass
DATABASE_URL=postgresql://musicmood_user:musicmood_pass@postgres:5432/musicmood

# === Redis Configuration ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# === Spotify API (Required) ===
# Get credentials from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8001/callback

# === Ollama Configuration ===
# For Docker: Ollama runs in a container
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=gemma3:4b

# Alternative models:
# - gemma3:4b (default, recommended - 3.3GB)
# - qwen3:4b (good reasoning - 2.5GB)

# === API Configuration ===
API_HOST=0.0.0.0
API_PORT=8001

# === Frontend Configuration ===
API_BASE_URL=http://localhost:8001
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
